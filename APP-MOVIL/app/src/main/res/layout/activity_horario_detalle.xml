<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".Vista.HorarioDetalleActivity">

    <TextView
        android:id="@+id/textView7"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Seleccione los días de atención" />

    <CheckBox
        android:id="@+id/chkLunes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lunes"/>
    <CheckBox
        android:id="@+id/chkMartes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Martes"/>
    <CheckBox
        android:id="@+id/chkMiercoles"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Miercoles"/>
    <CheckBox
        android:id="@+id/chkJueves"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Jueves"/>
    <CheckBox
        android:id="@+id/chkViernes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Viernes"/>
    <CheckBox
        android:id="@+id/chkSabado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sabado"/>
    <CheckBox
        android:id="@+id/chkDomingo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Domingo"/>

    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="HORARIO" />

    <TextView
        android:id="@+id/txtHorarioConcat"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24dp"
        android:textAlignment="center"
        android:text="TextView" />


</LinearLayout>